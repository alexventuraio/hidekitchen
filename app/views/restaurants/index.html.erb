<div class="row">
  <div class="col-sm-6">
    <h1>Restaurants</h1>
  </div>

  <div class="col-sm-6 text-right">
    <%= link_to new_restaurant_path, class: 'btn btn-primary' do %>
      Add New Restaurant
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Domain</th>
        <th>Subdomain</th>
        <th>User</th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <%= content_tag :tr, id: dom_id(restaurant), class: dom_class(restaurant) do %>
          <td><%= link_to restaurant.name, restaurant %></td>
          <td><%= restaurant.domain %></td>
          <td><%= restaurant.subdomain %></td>
          <td><%= restaurant.user.email %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
